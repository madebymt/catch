

 .order-enter
 transition all 0.5s
 transform translateX(-120%) rotate(0)
 max-height 0
 padding 0 !important
 background red

 &.order-enter-active
 max-height 60px
 padding 2rem 0 !important
 transform translateX(0)
 background yellow;

 .order-leave
 transition all 0.5s
 transform translateX(0)
 &.order-leave-active
 transform translate(120%)
 max-height 0
 padding 0

.count-enter
transition all 25s
transform translateY(100%)
&.count-enter-active
transform translate(0)

.count-leave
transition all 25s
position absolute
left 0
bottom 0
transform translateY(0)
&.count-leave-ative
transform translateY(-100%)
